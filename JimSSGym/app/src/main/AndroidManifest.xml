<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jimssgym">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".UserActivity"/>
        <activity
            android:name=".AboutActivity"
            android:label="About"
            android:parentActivityName=".SettingsActivity"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QRReaderQuickScanActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".QuickScanActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".QuickScanCardViewActivity"
            android:label="@string/app_name"
            android:parentActivityName=".QRReaderQuickScanActivity" />
        <activity
            android:name=".FriendsActivity"
            android:label="Friends"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".UserActivity"
            android:label="User"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".FillCalenderActivity"
            android:label="Calender"
            android:noHistory="true"
            android:parentActivityName=".FriendsActivity" />
        <activity
            android:name=".CalenderActivity"
            android:label="Friends"
            android:noHistory="true"
            android:parentActivityName=".FriendsActivity" />
        <activity
            android:name=".PopUpWorkoutActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".PopUpAddTime"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".PopUpDelete"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".FriendCardViewActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".UserSetupActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".SignInActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ScanActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".ScanCardViewActivity"
            android:label="@string/app_name"
            android:parentActivityName=".QRReaderActivity" />
        <activity
            android:name=".QRReaderActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SuggestedWorkoutActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Capacity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.CAMERA" />

</manifest>